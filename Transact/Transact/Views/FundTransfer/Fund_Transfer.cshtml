@model Transact.Models.Fund_Transfer

@{
    ViewBag.Title = "Fund_Transfer";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

@if (Session["UserID"] != null)
{

    <div class="container-fluid" style="height:605px">

        <div class="row" style="">

            @Html.Partial("_LoggedInLeftPanel")

            <div class="col-sm-9 col-md-10 col-lg-10" style="background-color:#9ea7a6;color:black;height:605px">



                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Fund_Transfer</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @if (ViewBag.Check_balance != null)
                        {
                            <div class="form-group">
                                <div class="col-md-10">
                                    @ViewBag.Check_balance
                                </div>


                            </div>

                        }

                        <div class="form-group">
                            @Html.LabelFor(model => model.TO_ACCOUNT, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TO_ACCOUNT, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TO_ACCOUNT, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.AMOUNT, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.AMOUNT, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AMOUNT, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">

                                <input type="submit" value="Transfer" class="btn btn-secondary" />


                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
}
